<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_50"
        android:background="@drawable/logo"
        android:layout_marginStart="@dimen/margin_60"
        android:layout_marginEnd="@dimen/margin_60"
        android:layout_height="@dimen/margin_130" />

    <ImageView
        android:id="@+id/img_user_icon"
        android:layout_width="@dimen/margin_120"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/user_logo"
        android:layout_height="@dimen/margin_120"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/md_red_900"
        android:textSize="@dimen/text_size_large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"/>


    <EditText
        android:id="@+id/input_emp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_30"
        android:drawableStart="@drawable/ic_person_24px"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/employee_id"
        android:textColorHint="@color/md_red_900"
        android:textColor="@color/md_red_900"
        android:layout_marginTop="@dimen/margin_20"
        android:backgroundTint="@color/md_red_900" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_30"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_person_24px"
        android:drawablePadding="@dimen/margin_10"
        android:hint="@string/verification_code"
        android:textColorHint="@color/md_red_900"
        android:textColor="@color/md_red_900"
        android:layout_marginTop="@dimen/margin_20"
        android:backgroundTint="@color/md_red_900" />



    <androidx.cardview.widget.CardView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_2"
        app:cardBackgroundColor="@color/md_grey_200"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_50"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/icon_login" />

    </androidx.cardview.widget.CardView>



</LinearLayout>